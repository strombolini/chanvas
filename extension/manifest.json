{
  "manifest_version": 3,
  "name": "Chanvas Auto-Scraper",
  "version": "2.0.0",
  "description": "Automatically scrape Canvas courses and chat with AI - no backend required!",
  "permissions": [
    "activeTab",
    "cookies",
    "storage",
    "tabs",
    "scripting",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "https://canvas.cornell.edu/*",
    "http://localhost:*/*",
    "https://*.herokuapp.com/*",
    "https://api.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://canvas.cornell.edu/*"],
      "js": ["content.js", "chat-injector.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["http://localhost:*/*", "http://127.0.0.1:*/*", "https://*.herokuapp.com/*"],
      "js": ["webapp-bridge.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["chat-widget.html", "chat-widget.js", "rag.js"],
      "matches": ["https://canvas.cornell.edu/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Chanvas Scraper & Chat"
  }
}